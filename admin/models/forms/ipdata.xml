<?xml version="1.0" encoding="utf-8"?>
<form>
	<fieldset name="essential">
		<field name="id" type="hidden" />
		
		<field name="name"
			type="text"
			label="COM_IPDATA_FIELD_VERSION_NAME_LABEL"
			description="COM_IPDATA_FIELD_VERSION_NAME_DESC"
			class="inputbox"
			size="40"
			required="true"
		/>
		
		<field name="version"
			type="text"
			label="COM_IPDATA_FIELD_VERSION_LABEL"
			description="COM_IPDATA_FIELD_VERSION_DESC"
			class="inputbox readonly"
			size="10"
			required="true"
			readonly="true"
		/>
		
		<field name="language"
			type="text"
			label="COM_IPDATA_FIELD_LANGUAGE_LABEL"
			description="COM_IPDATA_FIELD_LANGUAGE_DESC"
			class="inputbox readonly"
			size="30"
			required="true"
			readonly="true"
		/>
		
		<field name="bidi"
			type="text"
			label="COM_IPDATA_FIELD_BIDI_LABEL"
			description="COM_IPDATA_FIELD_BIDI_DESC"
			class="inputbox"
			size="10"
			required="false"
		/>
		
		<field name="testament"
			type="text"
			label="COM_IPDATA_FIELD_TESTAMENT_LABEL"
			description="COM_IPDATA_FIELD_TESTAMENT_DESC"
			class="inputbox"
			size="10"
			required="true"
		/>

	</fieldset>

	<fieldset name="optional">
		<field name="access"
			type="accesslevel"
			label="JFIELD_ACCESS_LABEL"
			description="JFIELD_ACCESS_DESC"
			default="2"
			required="false"
		 />
		 
		 <field name="published" type="list" label="JSTATUS"
			description="JFIELD_PUBLISHED_DESC" class="chzn-color-state"
			filter="intval" size="1" default="1"
		>
			<option value="1">
				JPUBLISHED</option>
			<option value="0">
				JUNPUBLISHED</option>
			<option value="2">
				JARCHIVED</option>
			<option value="-2">
				JTRASHED</option>
		</field>
		
		<field name="created_on" type="calendar" label="COM_CONTENT_FIELD_CREATED_LABEL"
			description="COM_CONTENT_FIELD_CREATED_DESC" class="inputbox" size="22"
			format="%Y-%m-%d %H:%M:%S" />

		<field name="created_by" type="user"
			label="COM_CONTENT_FIELD_CREATED_BY_LABEL" description="COM_CONTENT_FIELD_CREATED_BY_DESC" />

		<field name="modified_on" type="calendar" class="readonly"
			label="JGLOBAL_FIELD_MODIFIED_LABEL" description="COM_CONTENT_FIELD_MODIFIED_DESC"
			size="22" readonly="true" format="%Y-%m-%d %H:%M:%S" filter="unset" />

		<field name="modified_by" type="user"
		label="JGLOBAL_FIELD_MODIFIED_BY_LABEL"
		class="readonly"
		readonly="true"
		filter="unset"
		 />

		<field name="checked_out" type="hidden" filter="unset" />

		<field name="checked_out_time" type="hidden" filter="unset" />

		<field name="access" type="accesslevel" label="JFIELD_ACCESS_LABEL"
			description="JFIELD_ACCESS_DESC" size="1" />
	</fieldset>
</form>