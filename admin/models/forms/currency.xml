<?xml version="1.0" encoding="utf-8"?>
<form
	addrulepath="/administrator/components/com_ipdata/models/rules"
	addfieldpath="/administrator/components/com_ipdata/models/fields"
>
	<fieldset name="details">
		<field
			name="id"
			type="hidden"
		/>
		<field
			name="date_created"
			type="hidden"
		/>
		<field
			name="user_created"
			type="hidden"
		/>
		<field
			class="inputbox validate-name"
			default=""
			description=""
			label="Name"
			name="name"
			required="true"
			size="40"
			type="text"
			validate="name"
		/>
		<field
			class="inputbox validate-codethree"
			default=""
			description=""
			label="Code Three"
			name="codethree"
			required="true"
			size="40"
			type="text"
			validate="codethree"
		/>
		<field
			class="inputbox"
			default=""
			description=""
			label="Code Two"
			name="codetwo"
			size="40"
			type="text"
		/>
		<field
			class="inputbox validate-numericcode"
			default=""
			description=""
			label="Numeric Code"
			name="numericcode"
			required="true"
			size="40"
			type="numbers"
			validate="numericcode"
		/>
		<field
			class="inputbox validate-symbol"
			default=""
			description=""
			label="Symbol"
			name="symbol"
			required="true"
			size="40"
			type="text"
			validate="symbol"
		/>
		<field
			class="inputbox decimalplace"
			default=""
			description=""
			label="Decimal Place"
			name="decimalplace"
			size="40"
			type="text"
		/>
		<field
			class="inputbox decimalsymbol"
			default=""
			description=""
			label="Decimal Symbol"
			name="decimalsymbol"
			size="40"
			type="text"
		/>
		<field
			class="inputbox thousands"
			default=""
			description=""
			label="Thousands"
			name="thousands"
			size="40"
			type="text"
		/>
		<field
			class="inputbox positivestyle"
			default=""
			description=""
			label="Positive Style"
			name="positivestyle"
			size="40"
			type="text"
		/>
		<field
			class="inputbox negativestyle"
			default=""
			description=""
			label="Negative Style"
			name="negativestyle"
			size="40"
			type="text"
		/>
		<field
			class="inputbox validate-ordering"
			default=""
			description=""
			label="Ordering"
			name="ordering"
			required="true"
			size="40"
			type="numbers"
			validate="ordering"
		/>
		 <field name="published" type="list" label="JSTATUS"
			description="JFIELD_PUBLISHED_DESC" class="chzn-color-state"
			filter="intval" size="1" default="1">
			<option value="1">
				JPUBLISHED</option>
			<option value="0">
				JUNPUBLISHED</option>
			<option value="2">
				JARCHIVED</option>
			<option value="-2">
				JTRASHED</option>
		</field>
		<field 
			name="asset_id" 
			type="hidden" 
			filter="unset" 
		/>
		<field
			name="rules"
			type="rules"
			label="Field Access Rule"
			translate_label="false"
			filter="rules"
			validate="rules"
			component="com_ipdata"
			section="currency"
		/>
	</fieldset>
</form>